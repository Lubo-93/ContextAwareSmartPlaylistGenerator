<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lubo.comp3200.context_aware_smart_playlist_generator" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="com.lubo.comp3200.context_aware_smart_playlist_generator.ActivityRecognitionService"
            android:exported="false" />
        <service
            android:name="com.lubo.comp3200.context_aware_smart_playlist_generator.WeatherRecognitionService"
            android:exported="false" />
        <service
            android:name="com.lubo.comp3200.context_aware_smart_playlist_generator.GeofenceTransitionsIntentService"
            android:exported="false" />

        <receiver android:name="com.lubo.comp3200.context_aware_smart_playlist_generator.AlarmReceiver" >
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.MORNING_ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.NOON_ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.AFTERNOON_ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.EVENING_ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.NIGHT_ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.TIME_ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.TIME_DATE_ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.TIME_RANGE_ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.TIME_RANGE_DATE_ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lubo.comp3200.context_recognition_user_test.REMOVE_ALARM" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.lubo.comp3200.context_aware_smart_playlist_generator.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lubo.comp3200.context_aware_smart_playlist_generator.AddContext"
            android:label="@string/title_activity_add_context"
            android:parentActivityName="com.lubo.comp3200.context_aware_smart_playlist_generator.Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lubo.comp3200.context_aware_smart_playlist_generator.Main" />
        </activity>
        <activity
            android:name="com.lubo.comp3200.context_aware_smart_playlist_generator.ViewContexts"
            android:label="@string/title_activity_view_contexts"
            android:parentActivityName="com.lubo.comp3200.context_aware_smart_playlist_generator.Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lubo.comp3200.context_aware_smart_playlist_generator.Main" />
        </activity>
        <activity
            android:name="com.lubo.comp3200.context_aware_smart_playlist_generator.IndividualContextView"
            android:label="@string/title_activity_individual_context_view"
            android:parentActivityName="com.lubo.comp3200.context_aware_smart_playlist_generator.ViewContexts" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lubo.comp3200.context_aware_smart_playlist_generator.ViewContexts" />
        </activity>
    </application>

</manifest>
